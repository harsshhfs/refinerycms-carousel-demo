<ul>
  <% if ::Refinery::Admin::Carousel::PartsController.searchable? %>
    <li>
      <%= render :partial => "/refinery/admin/search",
                  :locals => {
                    :url => main_app.refinery_admin_carousel_parts_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), main_app.new_refinery_admin_carousel_part_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and ::Refinery::Admin::Carousel::PartsController.sortable? and ::Refinery::Carousel::Part.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Carousel Parts"),
                 main_app.refinery_admin_carousel_parts_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Carousel Parts"),
                 main_app.refinery_admin_carousel_parts_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
